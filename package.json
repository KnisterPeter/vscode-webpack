{
  "name": "vscode-webpack",
  "displayName": "vscode-webpack",
  "description": "Run webpack in code and track errors",
  "version": "1.1.0",
  "icon": "images/webpack.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "publisher": "KnisterPeter",
  "engines": {
    "vscode": "^1.44.0"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "mail@markus-wolf.de"
  },
  "homepage": "https://github.com/KnisterPeter/vscode-webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/KnisterPeter/vscode-webpack.git"
  },
  "bugs": {
    "url": "https://github.com/KnisterPeter/vscode-webpack/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "webpack"
  ],
  "activationEvents": [
    "workspaceContains:node_modules/.bin/webpack",
    "onCommand:vscode-webpack.trigger"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "webpack",
        "properties": {
          "configFile": {
            "type": "string",
            "description": "The webpack config file (e.g. webpack.config.js)"
          },
          "executionDirectory": {
            "type": "string",
            "description": "The directory is running in. This defaults to your project root"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "applyTo": "allDocuments",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Build started",
          "endsPattern": "Build (?:successful|failed)"
        },
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^doesn't-need-to-match$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "name": "knisterpeter.vscode-webpack"
      }
    ],
    "commands": [
      {
        "command": "vscode-webpack.trigger",
        "category": "webpack",
        "title": "Trigger"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "publish-extension": "vsce publish --yarn --pat $VSCE_TOKEN $(node -e \"console.log(require('./package.json').version)\")"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.44.0",
    "@types/webpack": "^4.41.12",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "expect": "^26.0.0",
    "glob": "^7.1.6",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.0",
    "prettier": "^2.0.5",
    "shipjs": "^0.24.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.0",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0"
  },
  "prettier": {
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "src/test/**/node_modules/**"
    ]
  },
  "renovate": {
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "yarn lint"
    ]
  }
}
