{
  "name": "vscode-webpack",
  "displayName": "vscode-webpack",
  "description": "Run webpack in code and track errors",
  "version": "0.1.4",
  "icon": "images/webpack.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "publisher": "KnisterPeter",
  "engines": {
    "vscode": "^1.44.0"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "mail@markus-wolf.de"
  },
  "homepage": "https://github.com/KnisterPeter/vscode-webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/KnisterPeter/vscode-webpack.git"
  },
  "bugs": {
    "url": "https://github.com/KnisterPeter/vscode-webpack/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "webpack"
  ],
  "activationEvents": [
    "workspaceContains:node_modules/.bin/webpack",
    "onCommand:vscode-webpack.start",
    "onCommand:vscode-webpack.trigger",
    "onCommand:vscode-webpack.stop"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "webpack",
      "properties": {
        "webpack.configFile": {
          "scope": "window",
          "type": "string",
          "default": "webpack.config.js",
          "description": "The webpack config file (e.g. webpack.config.js)"
        },
        "webpack.executionDirectory": {
          "scope": "window",
          "type": "string",
          "description": "The directory is running in. This defaults to your project root"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "webpack",
        "properties": {
          "configFile": {
            "type": "string",
            "description": "The webpack config file (e.g. webpack.config.js)"
          },
          "executionDirectory": {
            "type": "string",
            "description": "The directory is running in. This defaults to your project root"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vscode-webpack.start",
        "category": "webpack",
        "title": "Start"
      },
      {
        "command": "vscode-webpack.trigger",
        "category": "webpack",
        "title": "Trigger"
      },
      {
        "command": "vscode-webpack.stop",
        "category": "webpack",
        "title": "Stop"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "prerelease": "git checkout master && git pull origin master && yarn run vscode:prepublish",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master",
    "publish-extension": "vsce publish --yarn --pat $VSCE_TOKEN $(node -e \"console.log(require('./package.json').version)\")"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@types/webpack": "^4.41.12",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "expect": "^26.0.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "shipjs": "^0.18.3",
    "source-map-support": "^0.5.19",
    "standard-version": "^7.1.0",
    "typescript": "^3.8.3",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0"
  },
  "prettier": {},
  "renovate": {
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  }
}
