{
  "name": "vscode-webpack",
  "displayName": "vscode-webpack",
  "description": "Run webpack in code and track errors",
  "version": "0.0.1",
  "icon": "images/webpack.png",
  "publisher": "KnisterPeter",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:node_modules/webpack",
    "onCommand:vscode-webpack.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "webpack",
      "properties": {
        "webpack.configFile": {
          "scope": "window",
          "type": "string",
          "default": "webpack.config.js",
          "description": "The webpack config file (e.g. webpack.config.js)"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-webpack.start",
        "category": "webpack",
        "title": "Start"
      },
      {
        "command": "vscode-webpack.trigger",
        "category": "webpack",
        "title": "Trigger"
      },
      {
        "command": "vscode-webpack.stop",
        "category": "webpack",
        "title": "Stop"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@types/webpack": "^4.41.12",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "typescript": "^3.8.3",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0"
  },
  "prettier": {}
}
